<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_marginRight="@dimen/RegularMargin"
        android:layout_marginLeft="@dimen/RegularMargin"
        android:layout_marginBottom="@dimen/RegularMargin"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/RegularHeightView"
        android:text="Sign Up"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/DoubleRegularHeightView"
        android:text="New Text"
        android:gravity="center"
        android:textSize="24sp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_marginRight="@dimen/RegularMargin"
        android:layout_marginLeft="@dimen/RegularMargin"
        android:padding="@dimen/RegularMargin"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/RegularHeightView"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Username"
        android:id="@+id/editText"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_marginRight="@dimen/RegularMargin"
        android:layout_marginLeft="@dimen/RegularMargin"
        android:padding="@dimen/RegularMargin"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/RegularHeightView"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:id="@+id/editText2"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_marginLeft="@dimen/RegularMargin"
        android:layout_marginRight="@dimen/RegularMargin"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/MediumRegularHeightView"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <View
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="#33000000"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <TextView
            android:layout_weight="3"
            android:text="Or"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="#33000000"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/RegularHeightView"
        android:text="Log In"
        android:id="@+id/button3"
        android:layout_above="@+id/linearLayout"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />


</RelativeLayout>